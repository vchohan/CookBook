<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/main_app_bar_layout"
        tools:context="com.vchohan.cookbook.MainActivity">

    <LinearLayout
            android:id="@+id/recipe_tips_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/one_hundred_density_pixel">

        <TextView
                android:id="@+id/recipe_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="adsfsdf"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/recipe_card_view_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/recipe_tips_container">

        <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:drawableStart="@drawable/ic_add_white_24dp"
                android:text="Add an item" />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@id/btn_add" >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
