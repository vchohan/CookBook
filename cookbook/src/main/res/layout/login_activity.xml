<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context="com.vchohan.cookbook.LoginActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- login progress bar -->
        <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        <!-- login app logo container -->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/app_logo" />

        </LinearLayout>

        <!-- login form -->
        <LinearLayout
                android:id="@+id/login_form"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/twenty_density_pixel">

            <!-- login email container -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/border_view_rectangle">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/ten_density_pixel"
                        android:background="@color/colorIndigo300"
                        android:src="@drawable/ic_email_white_24dp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five_density_pixel">

                    <AutoCompleteTextView
                            android:id="@+id/login_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:hint="@string/prompt_email"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- login password container -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten_density_pixel"
                    android:gravity="center"
                    android:background="@drawable/border_view_rectangle">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/ten_density_pixel"
                        android:background="@color/colorIndigo300"
                        android:src="@drawable/ic_vpn_key_white_24dp" />

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five_density_pixel">

                    <EditText
                            android:id="@+id/login_user_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:hint="@string/prompt_password"
                            android:inputType="text|textNoSuggestions|textPassword"
                            android:imeOptions="actionGo" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- login / register / google sign-in button container -->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                <!-- login remember switch / login container -->
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:layout_gravity="center"
                            android:text="Remember Me" />

                    <Switch
                            android:id="@+id/login_user_remember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:layout_gravity="center"
                            android:elevation="17dp" />

                    <Button
                            android:id="@+id/login_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:background="@color/colorIndigo500"
                            android:elevation="24dp"
                            android:text="@string/action_login"
                            android:textColor="@color/colorWhite" />

                </LinearLayout>

                <!-- login register container -->
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/twenty_density_pixel">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/register_text" />

                    <TextView
                            android:id="@+id/login_register_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/ten_density_pixel"
                            android:text="@string/action_register"
                            android:textStyle="bold"
                            android:textColor="@color/colorIndigo500" />

                </LinearLayout>

                <!-- login google sign in container -->
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:layout_gravity="center"
                            android:text="@string/action_login_google" />

                    <com.google.android.gms.common.SignInButton
                            android:id="@+id/google_sign_in_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_density_pixel"
                            android:background="@color/colorIndigo500"
                            android:elevation="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
