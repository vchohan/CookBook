<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recipe_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_density_pixel"
        card_view:cardCornerRadius="@dimen/five_density_pixel"
        card_view:cardMaxElevation="@dimen/five_density_pixel"
        card_view:cardElevation="@dimen/five_density_pixel"
        android:layout_marginTop="@dimen/ten_density_pixel"
        android:layout_marginLeft="@dimen/ten_density_pixel"
        android:layout_marginRight="@dimen/ten_density_pixel">

    <LinearLayout
            android:id="@+id/recipe_card_view_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- recipe image container -->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center">

            <ImageView
                    android:id="@+id/recycler_recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_menu_camera" />

        </LinearLayout>

        <!-- options button / title / username / like button -->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

            <!-- options button-->
            <ImageButton
                    android:id="@+id/recycler_options_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/ten_density_pixel"
                    android:src="@drawable/ic_blur_on_black_24dp"
                    android:background="@android:color/transparent" />

            <!-- recipe title / username-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/ten_density_pixel"
                    android:gravity="center">

                <TextView
                        android:id="@+id/recycler_recipe_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="recipe title"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/recycler_recipe_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="username"
                        android:textSize="12sp" />

            </LinearLayout>

            <!-- like buttons-->
            <ImageButton
                    android:id="@+id/recycler_like_button_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/ten_density_pixel"
                    android:src="@drawable/ic_favorite_border_pink_24dp"
                    android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>