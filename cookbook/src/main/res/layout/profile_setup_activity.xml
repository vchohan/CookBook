<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profile_setup_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/twenty_density_pixel"
        tools:context="com.vchohan.cookbook.ProfileSetupActivity">

    <ImageButton
            android:id="@+id/profileSetupImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twenty_density_pixel"
            android:background="@drawable/border_view_circle" />

    <EditText
            android:id="@+id/profileSetupUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Please enter a username..."
            android:gravity="center"
            android:ems="10" />

    <Button
            android:id="@+id/profileSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

</LinearLayout>
